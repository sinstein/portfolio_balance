<p id="notice"><%= notice %></p>

<h1>User Portfolio Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Debt value</th>
      <th>Equity value</th>
      <th>Gold value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_portfolio_histories.each do |user_portfolio_history| %>
      <tr>
        <td><%= user_portfolio_history.date %></td>
        <td><%= user_portfolio_history.user_id %></td>
        <td><%= user_portfolio_history.debt_value %></td>
        <td><%= user_portfolio_history.equity_value %></td>
        <td><%= user_portfolio_history.gold_value %></td>
        <td><%= link_to 'Show', user_portfolio_history %></td>
        <td><%= link_to 'Edit', edit_user_portfolio_history_path(user_portfolio_history) %></td>
        <td><%= link_to 'Destroy', user_portfolio_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

